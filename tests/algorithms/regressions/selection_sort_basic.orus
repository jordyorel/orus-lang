fn selection_sort(values):
    mut length = len(values)
    if length <= 1:
        return values
    for i in 0..length:
        mut min_index = i
        for j in (i + 1)..length:
            if values[j] < values[min_index]:
                min_index = j
        if min_index != i:
            temp = values[i]
            values[i] = values[min_index]
            values[min_index] = temp
    return values


numbers = [3, 1, 4, 1, 5]
expected = [1, 1, 3, 4, 5]
sorted_numbers = selection_sort(numbers)
mut ok = true
if len(sorted_numbers) != len(expected):
    ok = false
else:
    mut index = 0
    while index < len(expected):
        if sorted_numbers[index] != expected[index]:
            ok = false
        index = index + 1
if ok:
    print("basic selection_sort ok", sorted_numbers)
else:
    print("FAIL basic selection_sort", sorted_numbers, "expected", expected)
