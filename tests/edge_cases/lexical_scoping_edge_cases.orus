// Edge cases for lexical scoping and variable shadowing

// Test 1: Deeply nested scopes with repeated names
value = "root"
if true:
    mut value = "outer"  // shadow global
    if true:
        mut value = "inner"
        print("inner:", value)
    print("outer after inner:", value)
print("global after scopes:", value)

// Test 2: Loop variables shadowing outer variables
counter = 100
for counter in 0..2:
    print("loop counter:", counter)
print("outer counter:", counter)
