mut total = 0
mut i = 0
while i < 6:
    total = total + i
    i = i + 1

mut mixed = 0
mut step = 0
while mixed < 5:
    mixed = mixed + step
    step = step + 1
    mixed = mixed + 1

mut wrap = 2147483638
mut ticks = 0
while ticks < 7:
    wrap = wrap + 1
    ticks = ticks + 1

mut down = 3
while down > -2:
    down = down - 1

assert_eq("phase2 inc_checked total", total, 15)
assert_eq("phase2 inc_checked mixed", mixed, 6)
assert_eq("phase2 inc_checked wrap", wrap, 2147483645)
assert_eq("phase2 inc_checked down", down, -2)
print("phase2-ok")
