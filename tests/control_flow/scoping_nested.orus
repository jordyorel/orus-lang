// Test nested scoping with block-local variables
x = 8
y = 3

if x > 5:
    outer_var = "outer block"
    print(outer_var)
    
    if y > 0:
        inner_var = "inner block"
        combined = x + y
        print(inner_var)
        print(combined)
    
    // inner_var not accessible here (would error if uncommented)
    // print(inner_var)
    
    // But outer_var and combined are accessible
    print(outer_var)

print("nested scoping complete")
if assert_eq("scoping_nested combined", combined, 11):
    print("ok", "combined", combined)
if assert_eq("scoping_nested outer_var", outer_var, "outer block"):
    print("ok", "outer_var", outer_var)
if assert_eq("scoping_nested x", x, 8):
    print("ok", "x", x)