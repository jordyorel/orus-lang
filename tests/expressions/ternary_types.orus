// Type system tests for ternary operator
// Tests type inference and type safety in ternary expressions

// Test 1: Consistent return types
x = 5
result = x > 0 ? 42 : -1
print(result)

// Test 2: String type consistency
name = "test"
greeting = name == "test" ? "hello" : "goodbye"
print(greeting)

// Test 3: Boolean type consistency
flag = true
status = flag ? true : false
print(status)

// Test 4: Same numeric types (no mixed types)
a = 10
b = 3
result2 = a > b ? a : b
print(result2)

// Test 5: Nullable types
value = nil
result3 = value == nil ? "null" : "not null"
print(result3)

// Test 6: Type inference with ternary
score = 85
grade = score >= 90 ? "A" : "B"
print(grade)

// Test 7: Type inference with arithmetic
items = 5
count = items > 0 ? items * 2 : 0
print(count)

// Test 8: String concatenation type handling
prefix = "Result: "
suffix = "end"
message = true ? prefix + "middle" + suffix : "none"
print(message)
