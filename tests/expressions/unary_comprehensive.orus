// Comprehensive unary operators test suite

// Basic unary minus
mut x = 42
mut neg_x = -x
print("Basic negation:")
print(x, "->", neg_x)

// Basic unary not
mut flag = true
mut neg_flag = not flag
print("Basic not:")
print(flag, "->", neg_flag)

// Negative literals
mut neg_literal = -123
print("Negative literal:", neg_literal)

// Type-specific negation
mut i32_val = -100i32
mut i64_val = -200i64
mut u32_val = -300u32  // Converts to signed
mut u64_val = -400u64  // Converts to signed
mut f64_val = -3.14f64
print("Type-specific negation:")
print(i32_val, i64_val, u32_val, u64_val, f64_val)

// Chained unary operators
mut double_neg = -(-456)
mut triple_not = not not not false
print("Chained operators:")
print(double_neg, triple_not)

// Zero handling
mut zero = 0
mut neg_zero = -zero
print("Zero negation:", neg_zero)

// Boolean edge cases
mut true_val = true
mut false_val = false
print("Boolean negation:")
print(not true_val, not false_val)

print("All unary operator tests passed!")
