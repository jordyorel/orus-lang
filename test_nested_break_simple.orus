// Simple nested loop test: WHILE → FOR → WHILE with break/continue
mut outer_counter = 0
while outer_counter < 2:
    print("Outer: " + (outer_counter as string))
    
    for middle in 1..3:
        print("  Middle: " + (middle as string))
        
        mut inner_counter = 0
        while inner_counter < 2:
            print("    Inner: " + (inner_counter as string))
            
            if inner_counter == 0:
                inner_counter = inner_counter + 1
                continue
            
            break
        
        if middle == 1:
            break
    
    outer_counter = outer_counter + 1

print("Done")