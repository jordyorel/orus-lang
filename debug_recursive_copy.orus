// Test recursive functions

// Simple factorial function
fn factorial(n) -> i32:
    if n <= 1:
        return 1
    else:
        return n * factorial(n - 1)

// Fibonacci function
fn fibonacci(n) -> i32:
    if n <= 1:
        return n
    else:
        return fibonacci(n - 1) + fibonacci(n - 2)

// Simple countdown function
fn countdown(n) -> void:
    print("Counting:", n)
    if n > 0:
        countdown(n - 1)

// Test recursive functions
fact5 = factorial(5)
print("5! =", fact5)

fib7 = fibonacci(7)
print("Fibonacci(7) =", fib7)

print("Countdown from 3:")
countdown(3)