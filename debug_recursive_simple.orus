fn simple_recursive(n) -> i32:
    print("simple_recursive(", n, ") called")
    if n <= 0:
        print("  base case, returning 0")
        return 0
    else:
        print("  calling simple_recursive(", n-1, ")")
        sub_result = simple_recursive(n - 1)
        print("  got sub_result =", sub_result)
        result = sub_result + 1
        print("  returning", result)
        return result

x = simple_recursive(3)
print("Final result:", x, "(should be 3)")