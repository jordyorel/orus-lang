print("\n7. WHILE LOOP TESTS:")

// Simple counting loop
print("Simple counting loop:")
mut counter = 0
while counter < 3:
    print("  Counter:", counter)
    counter = counter + 1

// While loop with break
print("While loop with break:")
mut i = 0
while i < 10:
    if i == 3:
        print("  Breaking at i =", i)
        break
    print("  i =", i)
    i = i + 1

