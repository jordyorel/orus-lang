// Test nested loops with breaks
print("Testing nested breaks:")

for i in 0..3:
    print("Level 1: i =", i)
    
    for j in 0..4:
        print("  Level 2: j =", j)
        
        if j == 2:
            print("  Breaking at j =", j)
            break
            
        mut k = 0
        while k < 3:
            k = k + 1
            print("    Level 3: k =", k)
            
            if k == 2 and j == 1:
                print("    Breaking inner while at k =", k)
                break
                
        print("  Level 2 continues")
    print("Level 1 continues")
print("All done")